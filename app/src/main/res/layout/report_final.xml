<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scroll_list"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/lblHead"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:textSize="18dp"
            android:text=".." />

        <TextView
            android:id="@+id/lblheader1"
            android:layout_below="@+id/lblHead"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:text="..." />
        <LinearLayout
            android:id="@+id/datePanel"
            android:layout_below="@+id/lblheader1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lbldate1"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="From" />
            <EditText
                android:id="@+id/editDate1"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:focusable="false"
                android:text="................." />
            <TextView
                android:id="@+id/lbldate2"
                android:layout_marginLeft="5dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="To" />
            <EditText
                android:id="@+id/editDate2"
                android:layout_marginLeft="5dp"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="............." />
            <Button
                android:layout_marginLeft="5dp"

                android:id="@+id/btnShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Load"
                android:textSize="10dp"
                />

        </LinearLayout>

        <ListView
            android:id="@+id/listView1"
            android:layout_below="@+id/datePanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </ListView>

    </RelativeLayout>
</ScrollView>